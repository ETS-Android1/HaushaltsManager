<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expense_screen_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/expense_screen_amount"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="?android:attr/actionModeCopyDrawable" />

                <Button
                    android:id="@+id/expense_screen_category"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/test"
                    android:drawableRight="@mipmap/quickcontact_badge_overlay_normal_dark_am"
                    android:fontFamily="sans-serif"
                    android:gravity="end|center_vertical"
                    android:onClick="expensePopUp"
                    android:text="@string/expense_screen_category"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <RadioGroup
                    android:id="@+id/expense_screen_expense_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/expense_screen_radio_expense"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/expense_screen_type_expense" />

                    <RadioButton
                        android:id="@+id/expense_screen_radio_income"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/expense_screen_type_income" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/expense_screen_title"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/quickcontact_badge_overlay_normal_dark_am"
                    android:fontFamily="sans-serif"
                    android:gravity="end|center_vertical"
                    android:onClick="expensePopUp"
                    android:text="@string/expense_screen_title"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/expense_screen_tag"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/quickcontact_badge_overlay_normal_dark_am"
                    android:fontFamily="sans-serif"
                    android:gravity="end|center_vertical"
                    android:onClick="expensePopUp"
                    android:text="@string/expense_screen_tag"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/expense_screen_date"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/quickcontact_badge_overlay_normal_dark_am"
                    android:fontFamily="sans-serif"
                    android:gravity="end|center_vertical"
                    android:onClick="expensePopUp"
                    android:text="@string/expense_screen_date"
                    android:textAllCaps="false"
                    android:textColor="?attr/editTextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/expense_screen_notice"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/quickcontact_badge_overlay_normal_dark_am"
                    android:fontFamily="sans-serif"
                    android:gravity="end|center_vertical"
                    android:onClick="expensePopUp"
                    android:text="@string/expense_screen_notice"
                    android:textAllCaps="false"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <Button
                    android:id="@+id/expense_screen_account"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@mipmap/quickcontact_badge_overlay_normal_dark_am"
                    android:fontFamily="sans-serif"
                    android:gravity="right|center_vertical"
                    android:onClick="expensePopUp"
                    android:text="@string/expense_screen_account"
                    android:textAllCaps="false"
                    android:textColor="?attr/editTextColor"
                    android:textSize="15sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/expense_screen_template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:text="@string/expense_screen_template" />

            <CheckBox
                android:id="@+id/expense_screen_recurring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/expense_screen_recurring" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/create_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cat" />

                <Button
                    android:id="@+id/create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Acc" />

                <Button
                    android:id="@+id/expense_screen_create_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:text="erstelle Buchung" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>