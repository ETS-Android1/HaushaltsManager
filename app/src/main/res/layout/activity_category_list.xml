<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/category_list_exp_list_view"
        layout="@layout/exp_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"/>

    <com.github.fafaldo.fabtoolbar.widget.FABToolbarLayout
        android:id="@+id/category_list_fab_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:containerId="@+id/category_list_fab_toolbar_container"
        app:fabId="@+id/category_list_fab_toolbar_fab"
        app:fabToolbarId="@+id/category_list_fab_toolbar_toolbar">

        <RelativeLayout
            android:id="@+id/category_list_fab_toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/category_list_fab_toolbar_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_white"
                app:fabSize="normal"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/category_list_fab_toolbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <!--Die Toolbar wird von der activity aus befÃ¼llt!-->

        </LinearLayout>
    </com.github.fafaldo.fabtoolbar.widget.FABToolbarLayout>
</android.support.constraint.ConstraintLayout>