<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryBackgroundColorBright"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <com.example.lucas.haushaltsmanager.Views.RoundedTextView
        android:id="@+id/exp_listview_group_rounded_textview"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exp_listview_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Buchungstitel"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="21sp"/>

            <TextView
                android:id="@+id/exp_listview_group_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="17"
                android:textAlignment="textEnd"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/exp_listview_group_currency_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="$"
                android:textAlignment="viewStart"
                android:textSize="16sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/exp_listview_group_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="Lucas"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

        </TableRow>

        <View
            android:id="@+id/exp_listview_group_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"/>

    </LinearLayout>

</LinearLayout>