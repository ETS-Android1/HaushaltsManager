<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.lucas.haushaltsmanager">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainTab.ParentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ExpenseScreenActivity"
            android:label="HaushaltsManager"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CategoryListActivity"
            android:label="Categories"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.TemplatesActivity"
            android:label="BookingTemplate"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.RecurringBookingsActivity"
            android:label="RecurringBookings"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CreateAccountActivity"
            android:label="CreateNewAccount"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CreateCategoryActivity"
            android:label="CreateNewCategory"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.TestActivity"
            android:label="TestPieChart"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CreateBackupActivity"
            android:label="CreateBackupActivity"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.TransferActivity"
            android:label="TransfersActivity"/>
        <activity
            android:name=".Activities.CourseActivity"
            android:label="CourseActivity"/>
        <activity
            android:name=".Activities.ImportExportActivity"
            android:label="ImportExportActivityVer3"/>

        <receiver
            android:name=".MyAlarmReceiver"
            android:process=":remote"/>

        <service
            android:name=".Services.BackupCreatorService"
            android:exported="false"
            android:label="BackupService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>