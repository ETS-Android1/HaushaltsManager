<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucas.haushaltsmanager">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivityTab"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ExpenseScreen"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".Categories"
            android:label="Categories"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".BookingTemplates"
            android:label="BookingTemplate"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".RecurringBookings"
            android:label="RecurringBookings"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".CreateNewAccountActivity"
            android:label="CreateNewAccount"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".CreateNewCategoryActivity"
            android:label="CreateNewCategory"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".TestPieChart"
            android:label="TestPieChart"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".ImportExportActivity"
            android:label="ExportImportActivity"
            android:parentActivityName=".MainActivityTab"/>

        <service
            android:name=".ExchangeRateService"
            android:label="ExchangeRateService"/>
        <service
            android:name=".ExchangeService"
            android:label="ExchangeService"/>
        <service
            android:name=".BackupService"
            android:label="BackupService"/>
    </application>

</manifest>