<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lucas.haushaltsmanager">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App.app"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainTab.ParentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.TemplatesActivity"
            android:label="@string/activity_template_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.ExpenseScreenActivity"
            android:label="@string/activity_expense_screen_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CategoryListActivity"
            android:label="@string/activity_category_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.RecurringBookingsActivity"
            android:label="@string/activity_recurring_bookings_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CreateAccountActivity"
            android:label="@string/activity_new_account_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CreateCategoryActivity"
            android:label="@string/activity_new_category_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.BackupActivity"
            android:label="@string/activity_backups_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.TransferActivity"
            android:label="@string/activity_transfers_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.CourseActivity"
            android:label="@string/activity_course_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.ImportExportActivity"
            android:label="@string/activity_import_export_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/activity_settings_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>
        <activity
            android:name=".Activities.AboutUsActivity"
            android:label="@string/activity_about_name"
            android:parentActivityName=".Activities.MainTab.ParentActivity"/>

        <receiver
            android:name=".MyAlarmReceiver"
            android:process=":remote"/>
        <service
            android:name=".Services.BackupCreatorService"
            android:exported="false"
            android:label="BackupService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>