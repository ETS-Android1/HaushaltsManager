<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.lucas.haushaltsmanager">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivityTab"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ExpenseScreen"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".Categories"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>
        <activity
            android:name=".PieChartTest"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>

        <activity
            android:name=".ExpandableListViewTest"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>

        <activity
            android:name=".BookingTemplates"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>

        <activity
            android:name=".RecurringBookings"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>

        <activity
            android:name=".CreateNewAccount"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>

        <activity
            android:name=".CreateNewCategory"
            android:label="HaushaltsManager"
            android:parentActivityName=".MainActivityTab"/>

        <service
            android:name=".ExchangeRateService"
            android:label="ExchangeRateService"/>

        <service
            android:name=".ExchangeService"
            android:label="ExchangeService"/>
    </application>

</manifest>